  <main class="container mx-auto p-4 pt-6 md:p-6 lg:p-12">

    <h1 class="text-3xl font-bold mb-4">Featured Posts</h1>
    <ul class="post-grid  list-none mb-4 grid grid-cols-1 md:grid-cols-3 gap-4">

      <% posts.forEach((post)=> { %>


        <li class="mb-4 mr-4 w-full">
          <img src="https://picsum.photos/seed/<%= post.domain %>/400/200" alt="Mountain"
            class="w-full h-64 object-cover w-20 h-20"> 
          <div class="card w-full p-4 bg-white rounded-lg shadow-md">
            <h2 class="text-2xl font-bold mb-2">
              <%= post.title %>
            </h2>
            <p class="text-gray-600 mb-2">
              <%= post.description %>
            </p>
            <p class="text-gray-600 mb-4">
              <%= post.content %>
            </p>
            <p class="text-gray-500 text-sm">
              By <%= post.fName %>
                <%= post.lName %> on <%= post.date %>
            </p>
            <% console.log("post id is" + post.id) %>
              <a href="/post/<%= post.id %>" class="btn btn-primary w-full">View Full Post</a>
          </div>
        </li>
        <% }); %>

    </ul>
    <hr />
    </br>
    <form action="/submit" method="POST" class="max-w-md mx-auto p-4 bg-white shadow-md rounded">
      <h2 class="text-2xl font-bold mb-4">Create a new post</h2>
      <div class="form-group mb-4">
        <label for="title" class="block text-gray-700 text-sm mb-2">Title</label>
        <input type="text" id="title" name="title" class="form-input w-full" placeholder="Title">
      </div>
      <div class="form-group mb-4">
        <label for="description" class="block text-gray-700 text-sm mb-2">Description</label>
        <textarea id="description" name="description" class="form-textarea w-full" placeholder="Description"></textarea>
      </div>
      <div class="form-group mb-4">
        <label for="content" class="block text-gray-700 text-sm mb-2">Content</label>
        <textarea id="content" name="content" class="form-textarea w-full" placeholder="Content"></textarea>
      </div>
      <div class="form-group mb-4">
        <label for="fName" class="block text-gray-700 text-sm mb-2">Full Name</label>
        <input type="text" id="fName" name="fName" class="form-input w-full" placeholder="First name">
      </div>

      <div class="form-group mb-4">
        <label for="date" class="block text-gray-700 text-sm mb-2">Date</label>
        <input type="date" id="date" name="date" class="form-input w-full">
      </div>
      <div class="form-group mb-4">
        <label for="domain" class="block text-gray-700 text-sm mb-2">Domain</label>
        <input type="text" id="domain" name="domain" class="form-input w-full" placeholder="Domain">
      </div>

      <input type="submit" value="Create Post" class="btn btn-primary w-full">
    </form>
  </main>
  </body>

